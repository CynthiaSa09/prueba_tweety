<p id="notice"><%= notice %></p>

<h1>Tweets</h1>

<table class= "table table-striped" >
  <thead>
    <tr>
      <th>Content</th>
      <th>Profile photo</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @tweets.each do |tweet| %>
      <tr>
        <td><%= tweet.content %></td>
        <td><%= image_tag (tweet.user.profile_photo), width: 100 if tweet.user.profile_photo != nil %></td>
        <td><%= link_to 'Show', tweet %></td>
        <td><%= link_to 'Edit', edit_tweet_path(tweet) %></td>
        <td><%= link_to 'Destroy', tweet, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<div class="btn btn-success">
<%= link_to 'New Post', new_tweet_path %>
</div>

