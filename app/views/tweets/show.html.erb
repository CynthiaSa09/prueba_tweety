<p id="notice"><%= notice %></p>

<p>
  <strong>Content:</strong>
  <%= @tweet.content %>
</p>


<% @users.each do |u| %>
  <% if @tweet.likes.find { |like| like.user_id == u.id} %>
  <%= image_tag u.profile_photo, width:75 %> 
  <% end %>
  <% end %>

<p>
  <strong>Likes:</strong>
  <%= @tweet.likes.count %>
</p>

<p>
  <strong>Retweet:</strong>
  <%= @tweet.retweets.count %>
</p>


<%= link_to 'Edit', edit_tweet_path(@tweet) %> |
<%= link_to 'Back', tweets_path %>
